<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/map_back_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorCyan"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/map_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/signup_back"
            android:layout_marginStart="15dp" />

    </LinearLayout>

    <com.tencent.tencentmap.mapsdk.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_back_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_sign_scan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_solid_cyan_style"
        android:text="@string/sign_scan_face"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>