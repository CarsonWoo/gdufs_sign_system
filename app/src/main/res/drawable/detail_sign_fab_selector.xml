<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#399E9E9E" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#48D3D3D3" />
                    <corners android:radius="13dp" />
                </shape>
            </item>
            <item android:bottom="4dp" android:right="3dp" android:left="3dp">
                <shape android:shape="rectangle">
                    <gradient android:type="linear"
                        android:startColor="#B9B9B9"
                        android:centerColor="#B4B4B4"
                        android:endColor="#C5C5C5"
                        android:angle="315" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#52858585" />
                    <corners android:radius="15dp" />
                </shape>
            </item>
            <item android:right="1dp" android:left="1dp" android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#45C5C5C5" />
                    <corners android:radius="13dp" />
                </shape>
            </item>
            <item android:bottom="2.5dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <gradient android:type="linear"
                        android:startColor="#2DA2FF"
                        android:centerColor="#0080FF"
                        android:endColor="#8CC4FF"
                        android:angle="315" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>